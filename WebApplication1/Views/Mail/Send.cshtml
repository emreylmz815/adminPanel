@model WebApplication1.Models.MailMessageViewModel
@{
    ViewBag.Title = "Mail Gönder";
}

<section class="page-section cta">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 mx-auto">
                <div class="cta-inner bg-faded text-center rounded">
                    <h2 class="section-heading mb-4">
                        <span class="section-heading-upper">Mail Servisi</span>
                        <span class="section-heading-lower">Yeni Mail Gönder</span>
                    </h2>

                    @if (ViewBag.MessageSent != null)
                    {
                        <div class="alert alert-success" role="alert">
                            Mail gönderildi.
                        </div>
                    }

                    @Html.ValidationSummary(true, "", new { @class = "text-danger text-left" })

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.From)
                            @Html.TextBoxFor(m => m.From, new { @class = "form-control", placeholder = "ornek@domain.com" })
                            @Html.ValidationMessageFor(m => m.From, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.To)
                            @Html.TextBoxFor(m => m.To, new { @class = "form-control", placeholder = "alici@domain.com" })
                            @Html.ValidationMessageFor(m => m.To, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.Subject)
                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Subject, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.Body)
                            @Html.TextAreaFor(m => m.Body, 8, 0, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Body, null, new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Gönder</button>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
