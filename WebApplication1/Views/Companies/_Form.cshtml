@model WebApplication1.Models.CRM.ViewModels.CompanyFormViewModel
@Html.ValidationSummary(true)
<div class="form-group">
    @Html.LabelFor(m => m.Company.Name)
    @Html.TextBoxFor(m => m.Company.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Company.Name)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Company.TaxNo)
    @Html.TextBoxFor(m => m.Company.TaxNo, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Company.Sector)
    @Html.TextBoxFor(m => m.Company.Sector, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Company.Phone)
    @Html.TextBoxFor(m => m.Company.Phone, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Company.Email)
    @Html.TextBoxFor(m => m.Company.Email, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Company.Website)
    @Html.TextBoxFor(m => m.Company.Website, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Company.Address)
    @Html.TextAreaFor(m => m.Company.Address, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.Label("Tags")
    @Html.TextBoxFor(m => m.Tags, new { @class = "form-control", placeholder = "comma separated" })
</div>
<div class="checkbox">
    <label>
        @Html.CheckBoxFor(m => m.Company.IsActive) Active
    </label>
</div>
