@model WebApplication1.Models.CRM.ViewModels.CompanyFormViewModel
@{
    ViewBag.Title = "Edit Company";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Partial("_Form", Model)
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Details", new { id = Model.Company.Id }, new { @class = "btn btn-default" })
}
